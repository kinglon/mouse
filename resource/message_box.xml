                    <Button name="cancelBtn" text="取消" width = "120" padding="20,0,0,0" textcolor="#fff0f0f0" bkcolor="#ff484848" height="30" />
                </HorizontalLayout>
            </HorizontalLayout>
        </VerticalLayout>
    </VerticalLayout>    
