    <Font id="2" name="微软雅黑" size="14" bold="false" default="true" />
    <Font id="3" name="微软雅黑" size="10" bold="false" />
 
    <VerticalLayout name="root" bkcolor="#ff272525" bordercolor="#ffbb220a" bordersize="1">
        <!--标题栏-->
        <HorizontalLayout height="30" bkcolor="#ffbb220a">            
        </HorizontalLayout>
        
        <VerticalLayout inset="20,20,20,20">
            <!--消息内容-->
            <Label name="textLabel" text="" textcolor="#fff0f0f0" align="center" valign="center" />
            
            <Control />
            
            <!--确定/取消按钮-->
            <HorizontalLayout>
                <Control />
                <Button name="okBtn" text="确定" width = "120" textcolor="#fff0f0f0" bkcolor="#ff484848" height="30" />
