<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Window caption="0,0,0,30" size="1100,700" mininfo="1100,700" maxinfo="1100,700">
    <Font id="1" name="微软雅黑" size="12" bold="false" shared="true" />
    <Font id="2" name="微软雅黑" size="14" bold="false" shared="true" default="true" />
    <Font id="3" name="微软雅黑" size="10" bold="false" shared="true" />
    
    <Default name="Combo" value="itemfont=&quot;1&quot; normalimage=&quot;file='combo_normal.bmp' corner='2,2,24,2'&quot; hotimage=&quot;file='combo_normal.bmp' corner='2,2,24,2'&quot; pushedimage=&quot;file='combo_normal.bmp' corner='2,2,24,2'&quot;" />
 
    <VerticalLayout name="root" bkcolor="#ff0a0a0a">
        <!--标题栏-->
        <HorizontalLayout height="30">
            <Control />
            <Button name="minBtn" width="17" height="17" padding="0,7,0,6" normalimage="file='minimize_button.png'" hotimage="file='minimize_button.png'" pushedimage="file='minimize_button.png'" keyboard="false"/>
            <Control width="20" />
            <Button name="closeBtn" width="17" height="17" padding="0,7,0,6" normalimage="file='close_button.png'" hotimage="file='close_button.png'" pushedimage="file='close_button.png'"  keyboard="false"/>
            <Control width="9" />
        </HorizontalLayout>
        
        <!--功能区-->
        <HorizontalLayout inset="33,10,11,0" >
            <!--左边-->
            <VerticalLayout width="250">
                <!--按键设置-->                
                <Button name="keyHeadBtn" height= "25" text="按键设置" textcolor="#fff0f0f0" align="left" textpadding="10,1,0,0" bkimage="file='header2_ov.png' corner='5,5,40,5'"/>
                <VerticalLayout name="keyPanel" height="190" inset="15,15,15,15" bkcolor="#ff1f1f1f">
                    <HorizontalLayout height="20" >
                        <Label text="1" bordercolor="#ffa8a8a8" textcolor="#fff0f0f0" width="20" bordersize="1" align="center" font="1"/>
                        <Control width="10" />
                        <Button name="firstKeyBtn" text="左键" textcolor="#fff0f0f0" textcolor="#fff0f0f0" bkcolor="#ff484848" font="1" />
                    </HorizontalLayout>
                    <Control height="8" />
                    <HorizontalLayout height="20" >
                        <Label text="2" bordercolor="#ffa8a8a8" textcolor="#fff0f0f0" width="20" bordersize="1" align="center" font="1"/>
                        <Control width="10" />
                        <Button name="secondKeyBtn" text="右键" textcolor="#fff0f0f0" textcolor="#fff0f0f0" bkcolor="#ff484848" font="1" />
                    </HorizontalLayout>
                    <Control height="8" />
                    <HorizontalLayout height="20" >
                        <Label text="3" bordercolor="#ffa8a8a8" textcolor="#fff0f0f0" width="20" bordersize="1" align="center" font="1"/>
                        <Control width="10" />
                        <Button name="thirdKeyBtn" text="中键" textcolor="#fff0f0f0" textcolor="#fff0f0f0" bkcolor="#ff484848" font="1" />
                    </HorizontalLayout>
                    <Control height="8" />
                    <HorizontalLayout height="20" >
                        <Label text="4" bordercolor="#ffa8a8a8" textcolor="#fff0f0f0" width="20" bordersize="1" align="center" font="1"/>
                        <Control width="10" />
                        <Button name="fouthKeyBtn" text="前进" textcolor="#fff0f0f0" textcolor="#fff0f0f0" bkcolor="#ff484848" font="1" />
                    </HorizontalLayout>
                    <Control height="8" />
                    <HorizontalLayout height="20" >
                        <Label text="5" bordercolor="#ffa8a8a8" textcolor="#fff0f0f0" width="20" bordersize="1" align="center" font="1"/>
                        <Control width="10" />
                        <Button name="fifthKeyBtn" text="后退" textcolor="#fff0f0f0" textcolor="#fff0f0f0" bkcolor="#ff484848" font="1" />
                    </HorizontalLayout>
                    <Control height="8" />
                    <HorizontalLayout height="20" >
                        <Label text="6" bordercolor="#ffa8a8a8" textcolor="#fff0f0f0" width="20" bordersize="1" align="center" font="1"/>
                        <Control width="10" />
                        <Button name="sixthKeyBtn" text="DPI切换" textcolor="#fff0f0f0" textcolor="#fff0f0f0" bkcolor="#ff484848" font="1" />
                    </HorizontalLayout>
                </VerticalLayout>                
                
                <!--宏管理器-->
                <Control height="30" />
                <HorizontalLayout height="30" bkcolor="#ff484848" bordercolor="#ffa8a8a8" bordersize="1" >
                    <Button name="macroHeadBtn" text="宏管理器" textcolor="#fff0f0f0" align="center" />                    
                </HorizontalLayout>
                <Control height="30" />
                
                <!--电量-->                
                <Button name="batteryHeadBtn" height= "25" text="电量" textcolor="#fff0f0f0" align="left" textpadding="10,1,0,0" bkimage="file='header2_ov.png' corner='5,5,40,5'"/>
                <VerticalLayout name="batteryPanel" height="81" inset="15,0,15,5" bkcolor="#ff1f1f1f">
                    <HorizontalLayout width="192" height="76" bkimage="file='battery.png'">
                        <!--Control name="batteryArea" padding="36,16,0,0" width="25" height="50" bkcolor="#ff1f1f1f" /-->
                        <Control name="batteryArea" padding="36,16,0,0" width="25" height="10" bkcolor="#ff1f1f1f" />
                        <Label name="batteryValue" padding="5,0,0,4" text="80%" textcolor="#fff0f0f0" width="40" align="center" valign="bottom" font="1"/>
                    </HorizontalLayout>
                </VerticalLayout>
                <Control height="15" />
                
                <!--电源管理-->                
                <Button name="powerHeadBtn" height= "25" text="电源管理" textcolor="#fff0f0f0" align="left" textpadding="10,1,0,0" bkimage="file='header2_ov.png' corner='5,5,40,5'"/>
                <HorizontalLayout name="powerPanel" height="70" inset="25,25,0,25" bkcolor="#ff1f1f1f">
                    <Label text="睡眠时间" textcolor="#fff0f0f0" width="70" align="right" font="1"/>
                    <Control width="7" />
                    <Combo name="timeCombo" height="20" font="1" width="50" textpadding="10,0,0,0" bordercolor="#ffa8a8a8" bordersize="1" bkcolor="#ff484848" textcolor="#fff0f0f0" dropboxsize="0,204" itemtextpadding="10,0,0,0"/>
                    <Control width="7" />
                    <Label text="分钟" textcolor="#fff0f0f0" width="40" align="left" font="1"/>
                </HorizontalLayout>
                
                <!--配置、驱动版本-->
                <Control />
                <HorizontalLayout height="24">
                    <Button name="settingBtn" text="配置" width="75" bkcolor="#ff484848" textcolor="#fff0f0f0" />
                    <Label text="驱动版本：" textcolor="#fff0f0f0" width="80" align="right" font="1"/>
                    <Label name="driverVerson" text="" textcolor="#fff0f0f0" align="left" font="1"/>
                </HorizontalLayout>
                <Control height="15" />
            </VerticalLayout>
            
            <!--中间-->
            <VerticalLayout>
                <Control />
                <HorizontalLayout height="604">
                    <Control />
                    <Control width="521" height="604" bkimage="file='mouse.png'" />
                    <Control />
                </HorizontalLayout>
                <Control />
            </VerticalLayout>
            
            <!--右边-->
            <VerticalLayout width="300">
                <!--DPI设置-->
                <Button name="dpiHeadBtn" height= "25" text="DPI设置" textcolor="#fff0f0f0" align="left" textpadding="10,1,0,0" bkimage="file='header2_nr.png' corner='5,5,40,5'"/>
                <HorizontalLayout name="dpiPanel" height="195" inset="20,10,20,10" bkcolor="#ff1f1f1f" visible="false">
                    <VerticalLayout width="35">
                        <Container height="135" padding="13,0,13,0">
                            <Button name="dpiValueBtn1" bkcolor="#ff454443" borderround="5,5" height="135"/>
                            <VerticalLayout mouse="false">
                                <Control mouse="false" />
                                <Button name="dpiValueForgroundBtn1" bkcolor="#ffff0000" borderround="5,5" height="67"/>
                            </VerticalLayout>
                        </Container>
                        <Control height="5"/>
                        <Button name="dpiValueLabel1" text="800" height="15" bordercolor="#ffa8a8a8" textcolor="#fff0f0f0" bordersize="1" align="center" font="3"/>
                        <Control />
                        <Button name="dpiColorBtn1" bkcolor="#ffff0000" height="15" />
                    </VerticalLayout>
                    <Control width="10" />
                    <VerticalLayout width="35">
                        <Container height="135" padding="13,0,13,0">
                            <Button name="dpiValueBtn2" bkcolor="#ff454443" borderround="5,5"  height="135"/>
                            <VerticalLayout mouse="false">
                                <Control mouse="false" />
                                <Button name="dpiValueForgroundBtn2" bkcolor="#ffff0000" borderround="5,5" height="67"/>
                            </VerticalLayout>
                        </Container>                        
                        <Control height="5"/>
                        <Button name="dpiValueLabel2" text="1600" height="15" bordercolor="#ffa8a8a8" textcolor="#fff0f0f0" bordersize="1" align="center" font="3"/>
                        <Control />
                        <Button name="dpiColorBtn2" bkcolor="#ff00ff00" height="15" />
                    </VerticalLayout>
                    <Control width="10" />
                    <VerticalLayout width="35">
                        <Container height="135" padding="13,0,13,0">
                            <Button name="dpiValueBtn3" bkcolor="#ff454443" borderround="5,5" height="135"/>
                            <VerticalLayout mouse="false">
                                <Control mouse="false" />
                                <Button name="dpiValueForgroundBtn3" bkcolor="#ffff0000" borderround="5,5" height="67"/>
                            </VerticalLayout>
                        </Container>                        
                        <Control height="5"/>
                        <Button name="dpiValueLabel3" text="2400" height="15" bordercolor="#ffa8a8a8" textcolor="#ffff0000" bordersize="1" align="center" font="3"/>
                        <Control />
                        <Button name="dpiColorBtn3" bkcolor="#ff0000ff" height="15" />
                    </VerticalLayout>
                    <Control width="10" />
                    <VerticalLayout width="35">
                        <Container height="135" padding="13,0,13,0">
                            <Button name="dpiValueBtn4" bkcolor="#ff454443" borderround="5,5" height="135"/>
                            <VerticalLayout mouse="false">
                                <Control mouse="false" />
                                <Button name="dpiValueForgroundBtn4" bkcolor="#ffff0000" borderround="5,5" height="67"/>
                            </VerticalLayout>
                        </Container>  
                        <Control height="5"/>
                        <Button name="dpiValueLabel4" text="3200" height="15" bordercolor="#ffa8a8a8" textcolor="#fff0f0f0" bordersize="1" align="center" font="3"/>
                        <Control />
                        <Button name="dpiColorBtn4" bkcolor="#ffffff00" height="15" />
                    </VerticalLayout>
                    <Control width="10" />
                    <VerticalLayout width="35">
                        <Container height="135" padding="13,0,13,0">
                            <Button name="dpiValueBtn5" bkcolor="#ff454443" borderround="5,5" height="135"/>
                            <VerticalLayout mouse="false">
                                <Control mouse="false" />
                                <Button name="dpiValueForgroundBtn5" bkcolor="#ffff0000" borderround="5,5" height="67"/>
                            </VerticalLayout>
                        </Container> 
                        <Control height="5"/>
                        <Button name="dpiValueLabel5" text="5000" height="15" bordercolor="#ffa8a8a8" textcolor="#fff0f0f0" bordersize="1" align="center" font="3"/>
                        <Control />
                        <Button name="dpiColorBtn5" bkcolor="#ff00ffff" height="15" />
                    </VerticalLayout>
                    <Control width="10" />
                    <VerticalLayout width="35">
                        <Container height="135" padding="13,0,13,0">
                            <Button name="dpiValueBtn6" bkcolor="#ff454443" borderround="5,5" height="135"/>
                            <VerticalLayout mouse="false">
                                <Control mouse="false" />
                                <Button name="dpiValueForgroundBtn6" bkcolor="#ffff0000" borderround="5,5" height="67"/>
                            </VerticalLayout>
                        </Container>
                        <Control height="5"/>
                        <Button name="dpiValueLabel6" text="26000" height="15" bordercolor="#ffa8a8a8" textcolor="#fff0f0f0" bordersize="1" align="center" font="3"/>
                        <Control />
                        <Button name="dpiColorBtn6" bkcolor="#ffff00ff" height="15" />
                    </VerticalLayout>
                </HorizontalLayout>
                
                <!--灯效设置-->
                <Control height="8" />
                <Button name="lightHeadBtn" height= "25" text="灯效设置" textcolor="#fff0f0f0" align="left" textpadding="10,1,0,0" bkimage="file='header2_nr.png' corner='5,5,40,5'"/>
                <HorizontalLayout name="lightPanel" height="110" inset="40,10,40,10" bkcolor="#ff1f1f1f" visible="false">
                    <Combo name="lightCombo" height="20" font="1" textpadding="10,0,0,0" bordercolor="#ffa8a8a8" bordersize="1" textcolor="#fff0f0f0" bkcolor="#ff484848" dropboxsize="0,79" itemtextpadding="10,0,0,0" />
                </HorizontalLayout>
                
                <!--回报率设置-->
                <Control height="8" />
                <Button name="huiBaoHeadBtn" height= "25" text="回报率设置" textcolor="#fff0f0f0" align="left" textpadding="10,1,0,0" bkimage="file='header2_nr.png' corner='5,5,40,5'"/>
                <HorizontalLayout name="huiBaoPanel" height="110" inset="40,10,40,10" bkcolor="#ff1f1f1f" visible="false">
                    <Combo name="huiBaoCombo" height="20" font="1" textpadding="10,0,0,0" text="" bordercolor="#ffa8a8a8" bordersize="1" textcolor="#fff0f0f0" bkcolor="#ff484848" dropboxsize="0,154" itemtextpadding="10,0,0,0"/>
                </HorizontalLayout>
                
                <!--鼠标LOD高度-->
                <Control height="8" />
                <Button name="lodHeadBtn" height= "25" text="鼠标LOD高度" textcolor="#fff0f0f0" align="left" textpadding="10,1,0,0" bkimage="file='header2_nr.png' corner='5,5,40,5'"/>
                <HorizontalLayout name="lodPanel" height="110" inset="40,10,40,10" bkcolor="#ff1f1f1f" visible="false" bkcolor="#ff484848">
                    <Combo name="lodCombo" height="20" text="" font="1" textpadding="10,0,0,0" bordercolor="#ffa8a8a8" bordersize="1" textcolor="#fff0f0f0" dropboxsize="0,54" itemtextpadding="10,0,0,0"/>
                </HorizontalLayout>
                
                <!--按键去抖时间-->
                <Control height="8" />
                <Button name="qudouHeadBtn" height= "25" text="按键去抖时间" textcolor="#fff0f0f0" align="left" textpadding="10,1,0,0" bkimage="file='header2_nr.png' corner='5,5,40,5'"/>
                <HorizontalLayout name="qudouPanel" height="75" inset="40,25,40,25" bkcolor="#ff1f1f1f" visible="false">
                    <Label text="延时(1ms-30ms)：" textcolor="#fff0f0f0" width="110" align="right" font="1"/>
                    <Edit name="qudouTimeEdit" width="40" height="25" text="1" bordercolor="#ffa8a8a8" textcolor="#ff000000" font="1" bordersize="1" />
                    <Control width="10" />
                    <Button name="qudouBtn" text="修改" textcolor="#fff0f0f0" bkcolor="#ff484848" height="25" font="1" />
                </HorizontalLayout>
                
                <!--鼠标参数设置-->
                <Control height="8" />
                <Button name="systemSettingHeadBtn" height= "25" text="鼠标参数设置" textcolor="#fff0f0f0" align="left" textpadding="10,1,0,0" bkimage="file='header2_nr.png' corner='5,5,40,5'"/>
