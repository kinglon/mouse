                    <Button name="systemSettingBtn" bkimage="file='window_logo.png'" width="45" height="45" />
                    <Control width="10" />
                    <Label text="打开鼠标属性页" textcolor="#fff0f0f0" width="110" align="right" font="1"/>
                </HorizontalLayout>
                
                <!--Sensor高阶设定-->
                <Control height="8" />
                <Button name="sensorHeadBtn" height= "25" text="Sensor高阶设定" textcolor="#fff0f0f0" align="left" textpadding="10,1,0,0" bkimage="file='header2_nr.png' corner='5,5,40,5'"/>
                <VerticalLayout name="sensorPanel" height="126" inset="40,25,40,25" bkcolor="#ff1f1f1f" visible="false">
                    <option name="lineRejustOption" width="180" height="20" text="直线修正" textcolor="#fff0f0f0" font="1" textpadding="30,3,0,0" bkimage="file='option_uncheck.png'" align="left"/>
                    <Control height="8" />
                    <option name="motionSyncOption" width="180" height="20" text="Motion Sync" textcolor="#fff0f0f0" font="1" textpadding="30,3,0,0" bkimage="file='option_uncheck.png'" align="left"/>
                    <Control height="8" />
                    <option name="rippleControlOption" width="180" height="20" text="Ripple Control" textcolor="#fff0f0f0" font="1" textpadding="30,3,0,0" bkimage="file='option_uncheck.png'" align="left"/>
                </VerticalLayout>
                
                <!--配对工具-->
                <Control height="8" />
                <Button name="matchHeadBtn" height= "25" text="配对工具" textcolor="#fff0f0f0" align="left" textpadding="10,1,0,0" bkimage="file='header2_nr.png' corner='5,5,40,5'"/>
                <VerticalLayout name="matchPanel" height="75" inset="40,25,40,25" bkcolor="#ff1f1f1f" visible="false">
                    <Button name="matchBtn" text="配对" textcolor="#fff0f0f0" bkcolor="#ff484848" font="1" width="68" height="25" padding="80,0,0,0"/>
                </VerticalLayout>
                
                <!--重置-->
                <Control />
                <HorizontalLayout height="24">
                    <Control />
                    <Button name="resetBtn" text="重置" width="75" bkcolor="#ff484848" textcolor="#fff0f0f0" />
                </HorizontalLayout>
                <Control height="15" />
            </VerticalLayout>                     
